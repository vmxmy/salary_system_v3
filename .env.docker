# ============================================
# Docker Compose Environment Variables
# ============================================

# Project Configuration
COMPOSE_PROJECT_NAME=salary-system-v3
COMPOSE_FILE=docker-compose.yml

# Application Configuration
NODE_ENV=production
TZ=Asia/Shanghai

# Container Configuration
CONTAINER_NAME=salary-system-v3
HOST_PORT=3001
CONTAINER_PORT=80

# Image Configuration
IMAGE_NAME=kulangsu/salary-system-v3
IMAGE_TAG=latest

# Security Configuration
REDIS_PASSWORD=your-secure-redis-password
POSTGRES_PASSWORD=your-secure-db-password

# Nginx Configuration (if using proxy profile)
NGINX_HOST=salary.yourdomain.com
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/private.key

# Monitoring Configuration (if using monitoring profile)
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Resource Limits
MEMORY_LIMIT=512M
MEMORY_RESERVATION=128M
CPU_LIMIT=0.5
CPU_RESERVATION=0.1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
BRIDGE_NAME=salary-br0

# Volume Configuration
VOLUME_PREFIX=salary-system-v3

# Backup Configuration (for future use)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=salary-system-backups